<?xml version="1.0" encoding="utf-8"?>




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">


    <EditText
        android:id="@+id/enterYourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:text="Enter Your Name"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="Say Hello"
        app:srcCompat="@drawable/guitar_shop"
        android:layout_marginBottom="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Item"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="0dp"
        android:layout_marginRight="20dp"
        android:textAlignment="viewEnd"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:spinnerMode="dropdown" />

    <ImageView
        android:id="@+id/goodItemImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/guitars" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp">


        <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Order Price"
            android:textSize="15dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="15dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:padding="0dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="34dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="20dp"
            android:textAlignment="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginLeft="36dp"
            android:background="@color/btn_grey"
            android:textColor="@color/white_text"
            android:onClick="decreaseQuantity"
            android:textSize="15dp"
            android:textFontWeight="900"
            />
        <TextView
            android:id="@+id/quantityValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="26dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@color/btn_grey"
            android:textColor="@color/white_text"
            android:onClick="increaseQuantity"
            android:textSize="15dp"
            android:textFontWeight="900"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/btn_grey"
        android:textColor="@color/white_text"
        android:textSize="16dp"
        android:textFontWeight="900"
        android:onClick="addToCart"
        android:text="Add To Cart" />


</LinearLayout>

